@model Kitap
@{
    ViewData["Title"] = "Sil";
}



<form method="post">
    <div class=" container border p-3 mt-5" style="background-color:lightyellow">
        <div class="row pb-3">
            <h2 class="text-bg-primary">KİTAP SİL</h2>
        </div>
        <div class="mb-3">
            <label asp-for="KitapAdi" class="p-0"></label>
            <input asp-for="KitapAdi" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Tanim" class="p-0"></label>
            <input asp-for="Tanim" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Yazar" class="p-0"></label>
            <input asp-for="Yazar" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Fiyat" class="p-0"></label>
            <input asp-for="Fiyat" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kitap Sil</button>
        @*  <button asp-controller="KitapTuru" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">geri dön</button> *@
        <a asp-controller="Kitap" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">Geri Dön</a>
    </div>
</form>
