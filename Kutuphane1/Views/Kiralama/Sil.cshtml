@model Kiralama
@{
    ViewData["Title"] = "Sil";
}



<form method="post">
    <div class=" container border p-3 mt-5" style="background-color:lightyellow">
        <div class="row pb-3">
            <h2 class="text-bg-primary">Kiralama Kaydı Sil</h2>
        </div>
        <div class="mb-3">
            <label asp-for="OgrenciId" class="p-0"></label>
            <input asp-for="OgrenciId" disabled class="form-control" />
        </div>
        <div class="mb-3"> 
            <label asp-for="KitapId" class="p-0"></label>
            <select asp-for="KitapId" disabled asp-items="@ViewBag.KitapList" class="form-select"></select>
        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kiralama Kaydı Sil</button>
        @*  <button asp-controller="KitapTuru" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">geri dön</button> *@
        <a asp-controller="Kiralama" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">Geri Dön</a>
    </div>
</form>
