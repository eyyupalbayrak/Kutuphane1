@model List<Kiralama>
@{
    ViewData["Title"] = "Kiralamalar";
}

@if (TempData["basarili"] != null)
{
    <h2 style="color:red;"> @TempData["basarili"]</h2>
}

<div class="container" style="background-color:lightyellow">
    <div class="row pt-3 pb-4">
        <div>
            <h1>KİRALAMALAR</h1>
        </div>
    </div>


    

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Öğrenci Id</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Kiralama in Model)
            {
                <tr>
                    <td>@Kiralama.Id</td>
                    <td>@Kiralama.OgrenciId</td>
                    <td>@Kiralama.Kitap.KitapAdi</td>
                    <td><a asp-controller="Kiralama" asp-action="EkleGuncelle" asp-route-id="@Kiralama.Id" type="button" class="btn btn-success" style="width:150px">Güncelle</a></td>
                    <td><a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@Kiralama.Id" type="button" class="btn btn-danger" style="width:150px">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Kiralama" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">Yeni Kiralama Ekle</a>
        </div>
    </div>

</div>